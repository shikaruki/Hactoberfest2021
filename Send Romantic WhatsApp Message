import pywhatkit

times = int(input("How many times you want to send a same mesaage: "))

number = int(input("Please enter your chat-person whatsapp number: "))

mssg = str(input("What message you want to send: "))

hour = int(input("Enter the hour(24 hour format): "))
min = int(input("Enter the minute: "))

print("Please wait......")


for i in range(times):
    pywhatkit.sendwhatmsg(number, mssg, hour, min)



